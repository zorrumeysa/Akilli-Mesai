@model AkilliMesaiPlanlayici.Models.FazlaMesai

@{
    ViewData["Title"] = "Yeni Fazla Mesai Ekle";
    var personeller = ViewBag.Personeller as List<AkilliMesaiPlanlayici.Models.Personel>;
}

<h2>@ViewData["Title"]</h2>

<form asp-action="Create" method="post">
    <div class="mb-3">
        <label class="form-label">Personel</label>
        <select asp-for="PersonelID" class="form-select" required>
            <option value="">-- Personel Seçin --</option>
            @foreach (var p in personeller)
            {
                <option value="@p.PersonelID">@p.AdSoyad</option>
            }
        </select>
    </div>

    <div class="mb-3">
        <label asp-for="Tarih" class="form-label"></label>
        <input asp-for="Tarih" type="date" class="form-control" required />
    </div>

    <div class="mb-3">
        <label asp-for="SaatSayisi" class="form-label"></label>
        <input asp-for="SaatSayisi" type="number" step="0.25" min="0" class="form-control" required />
    </div>

    <div class="mb-3">
        <label asp-for="Neden" class="form-label"></label>
        <input asp-for="Neden" class="form-control" maxlength="100" />
    </div>

    <div class="form-check mb-3">
        <input asp-for="OnayDurumu" class="form-check-input" />
        <label asp-for="OnayDurumu" class="form-check-label"></label>
    </div>

    <button type="submit" class="btn btn-primary">Kaydet</button>
    <a href="/FazlaMesai" class="btn btn-secondary">İptal</a>
</form>
